@model WebApplication.ViewModels.ProjectTaskCreateEditViewModel

<div class="form-group">
    <label asp-for="ProjectTask.Title" class="control-label"></label>
    <input asp-for="ProjectTask.Title" class="form-control" />
    <span asp-validation-for="ProjectTask.Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ProjectTask.Description" class="control-label"></label>
    <input asp-for="ProjectTask.Description" class="form-control" />
    <span asp-validation-for="ProjectTask.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ProjectTask.Priority.Name" class="col-md-2 control-label"></label>
    <select asp-for="ProjectTask.PriorityId" class="form-control" asp-items="Model.Priorities"></select>
</div>
<div class="form-group">
    <label asp-for="ProjectTask.Status.Name" class="col-md-2 control-label"></label>
    <select asp-for="ProjectTask.StatusId" class="form-control" asp-items="Model.Statuses"></select>
</div>

